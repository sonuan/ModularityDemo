<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wusongyuan.modularity.MainActivity"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/app_main_tab_mall_tv"
            style="@style/MainTabItemTextView"
            android:drawableTop="@drawable/ic_add_shopping_cart"
            android:text="商城"
            />

        <TextView
            android:id="@+id/app_main_tab_live_tv"
            style="@style/MainTabItemTextView"
            android:drawableTop="@drawable/ic_videocam"
            android:text="直播"
            />

        <TextView
            android:id="@+id/app_main_tab_forum_tv"
            style="@style/MainTabItemTextView"
            android:drawableTop="@drawable/ic_forum"
            android:text="社区"
            />

        <TextView
            android:id="@+id/app_main_tab_mine_tv"
            style="@style/MainTabItemTextView"
            android:drawableTop="@drawable/ic_supervisor_account"
            android:text="我"
            />

    </LinearLayout>
</LinearLayout>
